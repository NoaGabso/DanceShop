<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="OnlineDanceStore.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OnlineDanceStore">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="#9932cc" />
                <Setter Property="BorderColor" Value="#d8c8a0" />
                <Setter Property="TextColor" Value="#deb887" />
                <Setter Property="Padding" Value="6" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontFamily" Value="myfont" />
              <Setter Property="BorderWidth" Value="5" />
                <Setter Property="FontAttributes" Value="Italic"/>
               
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="myfont" />
            </Style>
            <Style TargetType="Grid">
                <Setter Property="Background" Value="#f0c5f1"/>
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
