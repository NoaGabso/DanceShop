    <Grid
        BackgroundColor="#FBEAE6"
        ColumnDefinitions="*,*"
        RowDefinitions="3*,30*">

        <Border
            Grid.Row="0"
          Grid.ColumnSpan="2"
            Margin="4">
            <Grid RowDefinitions="*" ColumnDefinitions="*,*"  BackgroundColor="#FBEAE6" >
                <Label 
                FontFamily="mayafont"
                FontSize="23"
                    VerticalOptions="Center"
                HorizontalOptions="Center"
                Text="Add An Item"
                TextColor="#684200" />
                <Button Grid.Row="0" Grid.Column="1"
                Margin="7,7"
                BorderWidth="4"
                Command="{Binding NewItemCommand}"
                FontFamily="OpenSansRegular"
                Text="Enter"
                TextColor="Pink"
                VerticalOptions="Center" />
    </Grid>
    </Border>

        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="4">
            <StackLayout>
                <!--<Picker  Title="Select a Category"
