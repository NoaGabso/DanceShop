<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  x:Class="OnlineDanceStore.View.AdminPage"
 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 xmlns:models="clr-namespace:OnlineDanceStore.Models"
 xmlns:viewmodels="clr-namespace:OnlineDanceStore.ViewModels"
             Title="AdminPage">
    
    <StackLayout
 
   VerticalOptions="Center"
  Background="#FBEAE6">
 
            <Grid RowDefinitions="1" ColumnDefinitions="2">
                <Label Grid.Row="1" Grid.Column="1"
   FontSize="18"
  Text="Add An Item"
  FontFamily="mayafont"         
  TextColor="#684200"
  HorizontalOptions="Center" />
                <Button Grid.Row="1" Grid.Column="2"
                FontFamily="OpenSansRegular"
 Margin="7,7"
TextColor="Pink" 
 BorderWidth="4"
VerticalOptions="Center"   
               Command="{Binding NewItemCommand}"
               Text="Enter"/>
            </Grid>
            <Label 
                  FontSize="18"
FontFamily="OpenSansRegular"
   FontAttributes="Italic"
   Text=" Item Name"
   TextColor="#684200"/>
            <Entry
Placeholder="please enter item name" 
Text="{Binding ItemName}"
 BackgroundColor="AliceBlue"/>

            <Label 
            FontSize="18"
FontFamily="OpenSansRegular"
   FontAttributes="Italic"
   Text=" Description"
   TextColor="#684200"/>
                           <Entry
                    Text="{Binding description}"
                    Placeholder="please enter the description" 
                    BackgroundColor="AliceBlue"/>

            <Label
         FontSize="18"
FontFamily="OpenSansRegular"
   FontAttributes="Italic"
   Text=" Category"
   TextColor="#684200"/>
           
                <Entry Placeholder="please enter category" 
BackgroundColor="AliceBlue" 
                   Text="{Binding categoriesname}" />

            <Label
            FontSize="18"
FontFamily="OpenSansRegular"
   FontAttributes="Italic"
   Text=" Price"
   TextColor="#684200" />

                <Entry
                 Placeholder="please enter the price" 
                    BackgroundColor="AliceBlue"
                    Text="{Binding price}"
           />


            <Label
                           FontSize="18"
FontFamily="OpenSansRegular"
   FontAttributes="Italic"
   Text=" Size"
   TextColor="#684200" />

            
                <Entry
                 Placeholder="please enter the size" 
                    BackgroundColor="AliceBlue"
                    Text="{Binding sizename}" />

            <Label 
                           FontSize="18"
FontFamily="OpenSansRegular"
   FontAttributes="Italic"
   Text=" Color"
   TextColor="#684200" />
           
                <Entry
                 Placeholder="please enter the color" 
                    BackgroundColor="AliceBlue"
                    Text="{Binding colorname}"
           />

            <Label 
             FontSize="18"
FontFamily="OpenSansRegular"
   FontAttributes="Italic"
   Text=" Gender"
   TextColor="#684200" />
            <Entry
                 Placeholder="please enter the gender" 
                    BackgroundColor="AliceBlue"
                    Text="{Binding gendername}" />

            <Label 
             FontSize="18"
FontFamily="OpenSansRegular"
   FontAttributes="Italic"
   Text=" Quantity"
   TextColor="#684200" />
         
                <Entry
                 Placeholder="please enter the quantity of items" 
                    BackgroundColor="AliceBlue"
                    Text="{Binding quantity}"
           />

            <Label
                           FontSize="18"
FontFamily="OpenSansRegular"
   FontAttributes="Italic"
   Text=" Image"
   TextColor="#684200" />
           
                <Entry
                 Placeholder="please upload the image" 
                    BackgroundColor="AliceBlue"
                    Text="{Binding image}"
           />
          

     
    </StackLayout>
