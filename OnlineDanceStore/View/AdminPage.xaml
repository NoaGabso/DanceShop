                <Label
                    FontAttributes="Italic"
                    FontFamily="OpenSansRegular"
                    FontSize="18"
                    Text=" Description"
                    TextColor="#684200" />
                <Entry
                    BackgroundColor="AliceBlue"
                    Placeholder="please enter the description"
                    Text="{Binding ItemDescription}" />

                <Label
                    FontAttributes="Italic"
                    FontFamily="OpenSansRegular"
                    FontSize="18"
                    Text=" Category"
                    TextColor="#684200" />

                <Entry
                    BackgroundColor="AliceBlue"
                    Placeholder="please enter category"
                    Text="{Binding ItemCategoryName}" />

                <Label
                    FontAttributes="Italic"
                    FontFamily="OpenSansRegular"
                    FontSize="18"
                    Text=" Price"
                    TextColor="#684200" />

                <Entry
                    BackgroundColor="AliceBlue"
                    Placeholder="please enter the price"
                    Text="{Binding ItemPrice}" />


                <Label
                    FontAttributes="Italic"
                    FontFamily="OpenSansRegular"
                    FontSize="18"
                    Text=" Size"
                    TextColor="#684200" />


                <Entry
                    BackgroundColor="AliceBlue"
                    Placeholder="please enter the size"
                    Text="{Binding ItemSizeName}" />

                <Label
                    FontAttributes="Italic"
                    FontFamily="OpenSansRegular"
                    FontSize="18"
                    Text=" Color"
                    TextColor="#684200" />

                <Entry
                    BackgroundColor="AliceBlue"
                    Placeholder="please enter the color"
                    Text="{Binding ItemColorName}" />

                <Label
                    FontAttributes="Italic"
                    FontFamily="OpenSansRegular"
                    FontSize="18"
                    Text=" Gender"
                    TextColor="#684200" />
                <Entry
                    BackgroundColor="AliceBlue"
                    Placeholder="please enter the gender"
                    Text="{Binding ItemGenderName}" />

                <Label
                    FontAttributes="Italic"
                    FontFamily="OpenSansRegular"
                    FontSize="18"
                    Text=" Quantity"
                    TextColor="#684200" />

                <Entry
                    BackgroundColor="AliceBlue"
                    Placeholder="please enter the quantity of items"
                    Text="{Binding ItemQuantity}" />

                <Label
                    FontAttributes="Italic"
                    FontFamily="OpenSansRegular"
                    FontSize="18"
                    Text=" Image"
                    TextColor="#684200" />

                <Image
            Aspect="AspectFit"
            HeightRequest="20"
            Source="{Binding PhotoImageSource}"
            WidthRequest="80">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Buttons="Primary" Command="{Binding ChangePhoto}" />
                    </Image.GestureRecognizers>
                </Image>

                <Button Command="{Binding TakePictureCommand}" Text="צלם תמונה" />

               


            </StackLayout>
        </Border>
