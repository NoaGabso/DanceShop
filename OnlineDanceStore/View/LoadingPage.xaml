<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineDanceStore.View.LoadingPage"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            xmlns:viewmodels="clr-namespace:OnlineDanceStore.ViewModels"
             x:DataType="viewmodels:LoadingPageViewModel"
             Title="LoadingPage">
    
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Margin="250">


        <ActivityIndicator
            HeightRequest="150"
            Color="#F995F7"
            IsRunning="{Binding IsBusy}"
            VerticalOptions="CenterAndExpand"
            WidthRequest="300"
            ZIndex="-1" />
        
        <Labelnbj
            HorizontalOptions="Center"
            Text=" please wait..."
            FontSize="25"
            FontFamily="mayafont"
            VerticalOptions="Center" 
            TextColor="#F995F7"/>
  


    </VerticalStackLayout>
</ContentPage>