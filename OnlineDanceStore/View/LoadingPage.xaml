<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineDanceStore.View.LoadingPage"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            xmlns:viewmodels="clr-namespace:OnlineDanceStore.ViewModels"
             x:DataType="viewmodels:LoadingPageViewModel"
             Title="LoadingPage">
    
    <VerticalStackLayout Margin="250">

        <toolkit:MediaElement
            WidthRequest="640"
            HeightRequest="320"
            Source="embed://test_dancestore.mp4"
            ShouldAutoPlay="True"/>
        <ActivityIndicator
            HeightRequest="100"
            BackgroundColor="Pink"
            Color="Orange"
            IsRunning="{Binding IsBusy}"
            VerticalOptions="CenterAndExpand"
            WidthRequest="100"
            ZIndex="-1" />
        
        <Label
            HorizontalOptions="Center"
            Text="המתינו..."
            VerticalOptions="Center" />
  


    </VerticalStackLayout>
</ContentPage>