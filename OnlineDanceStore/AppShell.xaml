<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OnlineDanceStore.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OnlineDanceStore"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        
        <ShellContent
    Title="Welcome To My Dance Store"
    ContentTemplate="{DataTemplate local:MainPage}"
    Route="MainPage" />
        
        <Tab Title="Home Page">
            <ShellContent
                x:Name="home"
                Title="HomePage"
                ContentTemplate="{DataTemplate local:HomePage}"
                Route="HomePage" />
        </Tab>

        <Tab Title="Shopping Cart">
            <ShellContent
                Title="shopping cart"
                ContentTemplate="{DataTemplate local:ShoppingCart}"
                Route="ShoppingCart" />
        </Tab>

        <Tab Title="User Information">
            <ShellContent
         Title="user info"
         ContentTemplate="{DataTemplate local:UserInfo}"
         Route="UserInfo" />
        </Tab>

    </TabBar>

    

</Shell>
